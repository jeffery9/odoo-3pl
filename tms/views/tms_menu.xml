<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TMS Main Menu -->
    <menuitem id="menu_tms_root"
              name="TMS"
              sequence="10"
              web_icon="tms,static/description/icon.png"/>

    <!-- TMS Routes Menu -->
    <menuitem id="menu_tms_routes"
              name="Routes"
              parent="menu_tms_root"
              sequence="10"/>

    <menuitem id="menu_tms_routes_all"
              name="All Routes"
              parent="menu_tms_routes"
              action="action_tms_route_list"
              sequence="10"/>

    <menuitem id="menu_tms_routes_active"
              name="Active Routes"
              parent="menu_tms_routes"
              action="action_tms_route_active"
              sequence="20"/>

    <!-- TMS Stops Menu -->
    <menuitem id="menu_tms_stops"
              name="Route Stops"
              parent="menu_tms_root"
              action="action_tms_route_stop_list"
              sequence="20"/>

    <!-- TMS Configuration Menu -->
    <menuitem id="menu_tms_config"
              name="Configuration"
              parent="menu_tms_root"
              sequence="100"/>

    <!-- Route Area Menu -->
    <menuitem id="menu_route_area"
              name="Route Areas"
              parent="menu_tms_config"
              action="action_route_area"
              sequence="10"/>

    <!-- Actions -->
    <record id="action_tms_route_list" model="ir.actions.act_window">
        <field name="name">All TMS Routes</field>
        <field name="res_model">tms.route</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new TMS Route
            </p>
            <p>
                Manage transportation routes for your delivery operations.
            </p>
        </field>
    </record>

    <record id="action_tms_route_active" model="ir.actions.act_window">
        <field name="name">Active TMS Routes</field>
        <field name="res_model">tms.route</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', 'in', ['confirmed', 'in_transit'])]</field>
        <field name="context">{'search_default_state': ['confirmed', 'in_transit']}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Active routes
            </p>
            <p>
                Routes that are currently in progress.
            </p>
        </field>
    </record>

    <record id="action_tms_route_stop_list" model="ir.actions.act_window">
        <field name="name">Route Stops</field>
        <field name="res_model">tms.route.stop</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage route stops
            </p>
            <p>
                View and manage all route stops.
            </p>
        </field>
    </record>

    <record id="action_route_area" model="ir.actions.act_window">
        <field name="name">Route Areas</field>
        <field name="res_model">route.area</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add route coverage areas
            </p><p>
                Create route coverage areas to organize your delivery operations by geographic regions.
            </p>
        </field>
    </record>

</odoo>