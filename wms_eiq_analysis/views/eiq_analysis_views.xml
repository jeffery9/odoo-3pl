<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Actions -->
    <record id="action_wms_eiq_analysis" model="ir.actions.act_window">
        <field name="name">EIQ Analysis</field>
        <field name="res_model">wms.eiq.analysis</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create EIQ analysis
            </p>
            <p>
                Perform Entry-Item-Quantity analysis to optimize warehouse layout and operations.
            </p>
        </field>
    </record>

    <record id="action_wms_eiq_analysis_report" model="ir.actions.act_window">
        <field name="name">Generate EIQ Analysis Report</field>
        <field name="res_model">wms.eiq.analysis.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_wms_eiq_analysis_report"/>
        <field name="binding_view_types">form</field>
    </record>

    <!-- Tree View for EIQ Analysis -->
    <record id="view_wms_eiq_analysis_list" model="ir.ui.view">
        <field name="name">wms.eiq.analysis.list</field>
        <field name="model">wms.eiq.analysis</field>
        <field name="arch" type="xml">
            <list string="EIQ Analysis" decoration-info="state=='draft'" decoration-success="state=='generated'" decoration-muted="state=='validated'">
                <field name="name"/>
                <field name="analysis_date"/>
                <field name="period_start"/>
                <field name="period_end"/>
                <field name="owner_id"/>
                <field name="analysis_type"/>
                <field name="entries"/>
                <field name="items"/>
                <field name="quantity"/>
                <field name="eoq"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View for EIQ Analysis -->
    <record id="view_wms_eiq_analysis_form" model="ir.ui.view">
        <field name="name">wms.eiq.analysis.form</field>
        <field name="model">wms.eiq.analysis</field>
        <field name="arch" type="xml">
            <form string="EIQ Analysis">
                <header>
                    <button name="action_generate_analysis"
                            string="Generate Analysis"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'draft'"
                            help="Generate EIQ analysis based on the set period and conditions"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,validated"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="analysis_date"/>
                            <field name="analysis_type"/>
                            <field name="calculation_method"/>
                        </group>
                        <group>
                            <field name="owner_id"/>
                            <field name="warehouse_id"/>
                            <field name="period_start"/>
                            <field name="period_end"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Core Metrics">
                            <group>
                                <group string="Basic EIQ Metrics">
                                    <field name="entries"/>
                                    <field name="items"/>
                                    <field name="quantity"/>
                                </group>
                                <group string="EIQ Ratio Metrics">
                                    <field name="eoq" string="Avg Items per Entry (I/E)"/>
                                    <field name="qoe" string="Avg Quantity per Entry (Q/E)"/>
                                    <field name="qoi" string="Avg Quantity per Item (Q/I)"/>
                                </group>
                            </group>
                        </page>

                        <page string="Order Analysis">
                            <group>
                                <field name="total_orders"/>
                                <field name="max_items_per_order"/>
                                <field name="min_items_per_order"/>
                                <field name="avg_items_per_order"/>
                            </group>
                        </page>

                        <page string="Item Analysis">
                            <group>
                                <field name="total_items"/>
                                <field name="max_orders_per_item"/>
                                <field name="min_orders_per_item"/>
                                <field name="avg_orders_per_item"/>
                            </group>
                        </page>

                        <page string="Analysis Results">
                            <field name="analysis_results"/>
                        </page>

                        <page string="Optimization Recommendations">
                            <field name="recommendations"/>
                        </page>

                        <page string="Detailed Statistics">
                            <field name="detailed_stats"/>
                        </page>

                        <page string="Additional Information">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Form View for EIQ Analysis Report Wizard -->
    <record id="view_wms_eiq_analysis_report_form" model="ir.ui.view">
        <field name="name">wms.eiq.analysis.report.form</field>
        <field name="model">wms.eiq.analysis.report</field>
        <field name="arch" type="xml">
            <form string="Generate EIQ Analysis Report">
                <group>
                    <group>
                        <field name="period_start"/>
                        <field name="period_end"/>
                    </group>
                    <group>
                        <field name="owner_id"/>
                        <field name="warehouse_id"/>
                    </group>
                    <group>
                        <field name="analysis_type"/>
                        <field name="calculation_method"/>
                    </group>
                </group>
                <footer>
                    <button name="action_generate_report"
                            string="Generate Report"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_wms_eiq_analysis_root"
              name="EIQ Analysis"
              parent="wms_owner.menu_3pl_storage_reporting"
              sequence="30"/>

    <menuitem id="menu_wms_eiq_analysis"
              name="EIQ Analysis Reports"
              parent="menu_wms_eiq_analysis_root"
              action="action_wms_eiq_analysis"
              sequence="10"/>

    <menuitem id="menu_wms_eiq_analysis_report"
              name="Generate New Analysis"
              parent="menu_wms_eiq_analysis_root"
              action="action_wms_eiq_analysis_report"
              sequence="20"/>

</odoo>