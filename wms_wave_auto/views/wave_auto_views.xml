<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action for Auto Wave Rules -->
    <record id="action_wms_wave_rule" model="ir.actions.act_window">
        <field name="name">Auto Wave Rules</field>
        <field name="res_model">wms.wave.rule</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create automatic wave generation rules
            </p>
            <p>
                Configure rules and conditions for automatic wave generation, including time-based, quantity-based triggers, etc.
            </p>
        </field>
    </record>

    <!-- Tree View for Auto Wave Rules -->
    <record id="view_wms_wave_rule_list" model="ir.ui.view">
        <field name="name">wms.wave.rule.tree</field>
        <field name="model">wms.wave.rule</field>
        <field name="arch" type="xml">
            <list string="Auto Wave Rules">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="trigger_type"/>
                <field name="trigger_value"/>
                <field name="wave_strategy"/>
                <field name="active"/>
                <field name="last_execution"/>
                <field name="execution_count"/>
            </list>
        </field>
    </record>

    <!-- Form View for Auto Wave Rules -->
    <record id="view_wms_wave_rule_form" model="ir.ui.view">
        <field name="name">wms.wave.rule.form</field>
        <field name="model">wms.wave.rule</field>
        <field name="arch" type="xml">
            <form string="Auto Wave Rules">
                <header>
                    <button name="action_execute_rule"
                            string="Execute Now"
                            type="object"
                            class="oe_highlight"
                            help="Execute wave generation based on this rule now"/>
                    <button name="generate_wave_manually"
                            string="Generate Wave Now"
                            type="object"
                            class="oe_highlight"
                            help="Generate wave based on rule configuration"/>
                    <button name="%(action_wms_wave_rule)d"
                            string="View All Rules"
                            type="action"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-check-circle-o">
                            <field name="active"
                                   widget="boolean_button"
                                   options='{"terminology": "active"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="active"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="last_execution"/>
                            <field name="execution_count"/>
                            <field name="notes"/>
                        </group>
                    </group>

                    <!-- Basic Wave Rule Fields (from wms_wave) -->
                    <group string="Basic Configuration">
                        <group>
                            <field name="trigger_type"/>
                            <field name="trigger_value"/>
                        </group>
                        <group>
                            <field name="time_period"/>
                            <field name="priority"/>
                        </group>
                    </group>

                    <!-- Wave Limits (from wms_wave) -->
                    <group string="Wave Limits">
                        <group>
                            <field name="max_orders_per_wave"/>
                            <field name="max_volume_per_wave"/>
                        </group>
                        <group>
                            <field name="max_weight_per_wave"/>
                            <field name="max_pickers"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Advanced Trigger Conditions">
                            <group>
                                <field name="time_trigger_type"/>
                            </group>

                            <group string="Time-based Conditions" invisible="time_trigger_type != 'fixed_time' and time_trigger_type != 'interval' and time_trigger_type != 'rolling_window'">
                                <field name="fixed_time" invisible="time_trigger_type != 'fixed_time'"/>
                                <field name="time_interval" invisible="time_trigger_type != 'interval'"/>
                                <field name="rolling_window_minutes" invisible="time_trigger_type != 'rolling_window'"/>
                            </group>

                            <group string="Quantity-based Conditions">
                                <field name="min_orders"/>
                                <field name="max_orders"/>
                                <field name="min_volume"/>
                                <field name="max_volume"/>
                                <field name="min_weight"/>
                                <field name="max_weight"/>
                            </group>
                        </page>

                        <page string="Order Filtering">
                            <group>
                                <field name="warehouse_ids" widget="many2many_tags"/>
                                <field name="picking_type_ids" widget="many2many_tags"/>
                                <field name="priority_filter"/>
                                <field name="carrier_filter_ids" widget="many2many_tags"/>
                                <field name="delivery_date_filter"/>
                            </group>
                        </page>

                        <page string="Wave Strategy">
                            <group>
                                <field name="wave_strategy"/>
                                <field name="max_wave_size"/>
                            </group>

                            <group string="Batching Optimization">
                                <field name="enable_batching"/>
                                <field name="batching_strategy" invisible="enable_batching == False"/>
                            </group>
                        </page>

                        <page string="Execution Configuration">
                            <group>
                                <field name="auto_confirm"/>
                                <field name="auto_assign"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_wms_wave_auto_root"
              name="Auto Wave Generation"
              parent="wms_owner.menu_3pl_picking_operations"
              sequence="25"/>

    <menuitem id="menu_wms_wave_rules"
              name="Wave Rule Configuration"
              parent="menu_wms_wave_auto_root"
              action="action_wms_wave_rule"
              sequence="10"/>

</odoo>