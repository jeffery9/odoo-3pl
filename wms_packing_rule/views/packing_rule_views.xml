<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Actions -->
    <record id="action_wms_packing_rule" model="ir.actions.act_window">
        <field name="name">Packing Rules</field>
        <field name="res_model">wms.packing.rule</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create packing rules
            </p>
            <p>
                Configure rules and optimization strategies for automatic packing suggestions to improve efficiency and space utilization.
            </p>
        </field>
    </record>

    <record id="action_wms_packing_box_type" model="ir.actions.act_window">
        <field name="name">Box Types</field>
        <field name="res_model">wms.packing.box.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage box types
            </p>
            <p>
                Define various box types and their specification parameters for packing optimization.
            </p>
        </field>
    </record>

    <!-- Tree Views -->
    <record id="view_wms_packing_rule_list" model="ir.ui.view">
        <field name="name">wms.packing.rule.list</field>
        <field name="model">wms.packing.rule</field>
        <field name="arch" type="xml">
            <list string="Packing Rules">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="rule_type"/>
                <field name="strategy"/>
                <field name="active"/>
                <field name="success_rate"/>
            </list>
        </field>
    </record>

    <record id="view_wms_packing_box_type_list" model="ir.ui.view">
        <field name="name">wms.packing.box.type.list</field>
        <field name="model">wms.packing.box.type</field>
        <field name="arch" type="xml">
            <list string="Box Types">
                <field name="name"/>
                <field name="code"/>
                <field name="length"/>
                <field name="width"/>
                <field name="height"/>
                <field name="max_weight"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form Views -->
    <record id="view_wms_packing_rule_form" model="ir.ui.view">
        <field name="name">wms.packing.rule.form</field>
        <field name="model">wms.packing.rule</field>
        <field name="arch" type="xml">
            <form string="Packing Rules">
                <header>
                    <button name="toggle_active"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-check-circle-o">
                        <field name="active"
                               widget="boolean_button"
                               options='{"terminology": "active"}'/>
                    </button>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-check-circle-o">
                            <field name="active"
                                   widget="boolean_button"
                                   options='{"terminology": "active"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="active"/>
                            <field name="sequence"/>
                            <field name="rule_type"/>
                        </group>
                        <group>
                            <field name="last_calculated"/>
                            <field name="success_rate"/>
                            <field name="avg_utilization"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Application Conditions">
                            <group>
                                <field name="warehouse_ids" widget="many2many_tags"/>
                                <field name="product_category_ids" widget="many2many_tags"/>
                                <field name="owner_ids" widget="many2many_tags"/>
                                <field name="picking_type_ids" widget="many2many_tags"/>
                            </group>
                        </page>

                        <page string="Packing Constraints">
                            <group>
                                <field name="max_box_weight"/>
                                <field name="max_box_volume"/>
                                <field name="max_items_per_box"/>
                                <field name="max_boxes_per_order"/>
                            </group>
                            <group string="Dimension Limits">
                                <field name="max_length"/>
                                <field name="max_width"/>
                                <field name="max_height"/>
                                <field name="max_dimension_sum"/>
                            </group>
                        </page>

                        <page string="Packing Strategy">
                            <group>
                                <field name="strategy"/>
                                <field name="optimization_target"/>
                                <field name="min_volume_utilization"/>
                                <field name="max_volume_utilization"/>
                            </group>
                        </page>

                        <page string="Special Rules">
                            <group>
                                <field name="separate_hazardous"/>
                                <field name="separate_fragile"/>
                                <field name="max_fragile_per_box"/>
                                <field name="avoid_mixed_temperature"/>
                                <field name="max_stack_height"/>
                            </group>
                        </page>

                        <page string="Box Type Configuration">
                            <field name="box_type_ids" widget="many2many_tags"/>
                        </page>

                        <page string="Statistics">
                            <group>
                                <field name="last_calculated"/>
                                <field name="success_rate"/>
                                <field name="avg_utilization"/>
                                <field name="notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_wms_packing_box_type_form" model="ir.ui.view">
        <field name="name">wms.packing.box.type.form</field>
        <field name="model">wms.packing.box.type</field>
        <field name="arch" type="xml">
            <form string="Box Types">
                <header>
                    <button name="toggle_active"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-check-circle-o">
                        <field name="active"
                               widget="boolean_button"
                               options='{"terminology": "active"}'/>
                    </button>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-check-circle-o">
                            <field name="active"
                                   widget="boolean_button"
                                   options='{"terminology": "active"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="description"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="owner_id"/>
                            <field name="material"/>
                            <field name="is_thermal"/>
                            <field name="is_reinforced"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Dimension Specifications">
                            <group>
                                <field name="length"/>
                                <field name="width"/>
                                <field name="height"/>
                                <field name="max_volume"/>
                            </group>
                            <group>
                                <field name="max_weight"/>
                                <field name="max_items"/>
                                <field name="tare_weight"/>
                            </group>
                        </page>

                        <page string="Special Properties" invisible="is_thermal == False">
                            <group>
                                <field name="temperature_range"/>
                                <field name="max_drop_height"/>
                            </group>
                        </page>

                        <page string="Cost Information">
                            <group>
                                <field name="cost"/>
                                <field name="rental_cost_per_day"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_wms_packing_rule_root"
              name="Packing Rule Management"
              parent="wms_owner.menu_3pl_picking_config"
              sequence="25"/>

    <menuitem id="menu_wms_packing_rules"
              name="Packing Rules"
              parent="menu_wms_packing_rule_root"
              action="action_wms_packing_rule"
              sequence="10"/>

    <menuitem id="menu_wms_packing_box_types"
              name="Box Types"
              parent="menu_wms_packing_rule_root"
              action="action_wms_packing_box_type"
              sequence="20"/>

</odoo>