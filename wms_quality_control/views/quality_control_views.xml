<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Quality Control Session Form View -->
    <record id="view_wms_quality_control_form" model="ir.ui.view">
        <field name="name">wms.quality.control.form</field>
        <field name="model">wms.quality.control</field>
        <field name="arch" type="xml">
            <form string="Quality Control Session">
                <header>
                    <button name="action_start_qc" type="object" string="Start QC" class="btn-primary" invisible="status != 'draft'"/>
                    <button name="action_pass_qc" type="object" string="Pass QC" class="btn-success" invisible="status != 'in_progress'"/>
                    <button name="action_fail_qc" type="object" string="Fail QC" class="btn-danger" invisible="status != 'in_progress'"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,in_progress,passed,failed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="qc_checklist_ids" widget="statinfo" string="Checklists" icon="fa-list"/>
                        <field name="qc_issues_ids" widget="statinfo" string="Issues" icon="fa-exclamation-triangle"/>
                        <field name="corrective_actions_ids" widget="statinfo" string="Actions" icon="fa-cogs"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="qc_type"/>
                            <field name="owner_id"/>
                            <field name="picking_id" invisible="context.get('picking_id_invisible', True)"/>
                        </group>
                        <group>
                            <field name="qc_date"/>
                            <field name="completion_date"/>
                            <field name="status"/>
                            <field name="pass_rate" widget="float_percentage"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Checklists">
                            <field name="qc_checklist_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="result"/>
                                    <field name="criticality"/>
                                    <field name="comments"/>
                                </list>
                            </field>
                        </page>
                        <page string="Issues">
                            <field name="qc_issues_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="severity"/>
                                    <field name="status"/>
                                    <field name="create_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Corrective Actions">
                            <field name="corrective_actions_ids">
                                <list>
                                    <field name="description"/>
                                    <field name="assigned_to"/>
                                    <field name="due_date"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Quality Control Session List View -->
    <record id="view_wms_quality_control_list" model="ir.ui.view">
        <field name="name">wms.quality.control.list</field>
        <field name="model">wms.quality.control</field>
        <field name="arch" type="xml">
            <list string="Quality Control Sessions">
                <field name="name"/>
                <field name="qc_type"/>
                <field name="owner_id"/>
                <field name="picking_id"/>
                <field name="qc_date"/>
                <field name="status"/>
                <field name="pass_rate" widget="float_percentage"/>
            </list>
        </field>
    </record>

    <!-- Quality Control Search View -->
    <record id="view_wms_quality_control_search" model="ir.ui.view">
        <field name="name">wms.quality.control.search</field>
        <field name="model">wms.quality.control</field>
        <field name="arch" type="xml">
            <search string="Quality Control Sessions">
                <field name="name"/>
                <field name="qc_type"/>
                <field name="owner_id"/>
                <field name="picking_id"/>
                <field name="qc_date"/>
                <field name="status"/>
                <group expand="0" string="Group By">
                    <filter string="Owner" name="group_owner" domain="[]" context="{'group_by':'owner_id'}"/>
                    <filter string="QC Type" name="group_type" domain="[]" context="{'group_by':'qc_type'}"/>
                    <filter string="Status" name="group_status" domain="[]" context="{'group_by':'status'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>